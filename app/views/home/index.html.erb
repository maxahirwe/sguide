    <div class="container mt-5">
      <h1 class="text-center mb-5">Programming Study Guide</h1>
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card bg-light shadow-sm">
            <div class="card-body">
              <%= form_with model: @prompt, url: 'prompts_path', method: :post do |form| %>
                <div class="form-group">
                  <%= form.label :language, class: "font-weight-bold" %>
                  <%= form.select :language, options_for_select(["Ruby", "JavaScript", "Python", "C++"], selected: '@prompt.language'), {class: "form-control"} %>
                </div>
                <div class="form-group">
                  <%= form.label :prompt, class: "font-weight-bold" %>
                  <%= form.text_field :prompt, {class: "form-control"} %>
                </div>
                <div class="form-group text-center">
                  <%= form.submit "Generate", {class: "btn btn-primary"} %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>