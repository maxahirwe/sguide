<%= form_for(prompt, url: prompts_path,method: :post, local: true, remote: true) do |form| %>
  <div class="form-group">
    <%= form.label :language, class: "font-weight-bold text-white" %>
    <%= form.select :language, options_for_select(languages, selected: languages.second), {class: "custom-select"} %>
  </div>
  <div class="form-group">
    <%= form.text_area :prompt, placeholder: "write here\n example: function that generates prime numbers", rows: "2 ", class: "form-control mt-2" %>
  </div>
  <div class="form-group text-center mt-2">
    <%= form.submit "Generate", {class: "btn btn-primary btn-sm"} %>
  </div>
<% end %>
