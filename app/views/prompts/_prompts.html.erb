<div class="row mt-2 justify-content-center">
  <div class="col-md-8">
    <div class="card bg-light shadow-sm">
      <div class="card-body">
        <h5 class="text-center font-weight-bold">Prompts<small id="prompt-count">(<%= @prompts_count %>)</small></h5>
        <div id="prompt-responses" class="overflow-auto" style="max-height: 500px;">
          <% @prompts.each do |prompt| %>
            <%= render partial: "prompt", locals: {prompt: prompt} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
